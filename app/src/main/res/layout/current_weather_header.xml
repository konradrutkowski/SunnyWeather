<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/weatherIcon"
        style="@style/headerElementStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingTop="8dp"
        android:src="@mipmap/weather_01d" />

    <com.pjkr.sunnyweather.currentweather.components.RoundBorderTextView
        android:id="@+id/tempText"
        style="@style/headerElementStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="15dp"
        android:text="55"
        android:textColor="@color/grey"
        android:textSize="@dimen/temp_text_size" />

    <TextView
        android:id="@+id/weatherName"
        style="@style/headerElementStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/weatherIcon"
        android:text="Sun"
        android:textColor="@color/grey" />


    <TextView
        android:id="@+id/weatherDescription"
        style="@style/headerElementStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/weatherName"
        android:text="Sunny weather"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/minTemp"
        style="@style/headerElementStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weatherDescription"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/maxTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/minTemp"
        android:textColor="@color/grey"
        style="@style/headerElementStyle"/>

    <TextView
        android:id="@+id/pressure"
        style="@style/headerElementStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/maxTemp"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/cityName"
        style="@style/headerElementStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@color/grey" />
</RelativeLayout>